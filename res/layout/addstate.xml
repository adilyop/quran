<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal|none" android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back22" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/list2" />

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="إضافة إلى المفضلة"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:textStyle="bold|italic" android:textSize="20dp" android:textColor="#8b4513"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back99" >

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:orientation="vertical" >

                    <ScrollView
                        android:id="@+id/scrollView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" >

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" android:gravity="center">

                            <LinearLayout
                                android:id="@+id/LinearLayout08"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right" >

                                <Spinner
                                    android:id="@+id/SpinnerState"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="#8b4513"/>

                                <FrameLayout
                                    android:id="@+id/FrameLayout01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/TextView05"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="عرض القائمة"
                                    android:textColor="#000000"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout05"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:gravity="right">

                                <AutoCompleteTextView
                                    android:id="@+id/editName"
                                    android:layout_width="90dp"
                                    android:layout_height="35dp"/>

                                <FrameLayout
                                    android:id="@+id/FrameLayout02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/TextView08"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="إسم جديد"
                                    android:textColor="#000000" android:gravity="right"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout09"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_gravity="right" android:gravity="right">

                                <Spinner
                                    android:id="@+id/SpinnerSourat"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="#8b4513"
                                    android:gravity="left" />

                                <FrameLayout
                                    android:id="@+id/FrameLayout03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/TextView06"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="السورة"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout07"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_gravity="right" android:gravity="right">

                                <EditText
                                    android:id="@+id/editayatfrom"
                                    android:layout_width="90dp"
                                    android:layout_height="35dp"
                                    android:inputType="number" />

                                <FrameLayout
                                    android:id="@+id/FrameLayout04"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/TextView09"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="من الاية"
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout06"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:layout_gravity="right" android:gravity="right">

                                <EditText
                                    android:id="@+id/ayatto"
                                    android:layout_width="90dp"
                                    android:layout_height="35dp"
                                    android:inputType="number" />

                                <FrameLayout
                                    android:id="@+id/FrameLayout05"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" >
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/TextView07"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="الى الاية "
                                    android:textColor="#000000"/>

                            </LinearLayout>

                            <Button
                                android:id="@+id/ButtonAdd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="حفظ" />
                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout04"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>